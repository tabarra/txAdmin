{
    "compilerOptions": {
        /* Truncated compiler options to list only relevant options */
        "target": "es2021",
        "declaration": true,
        "declarationMap": true,
        "composite": true,

        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "outDir": "../.tsc/shared",

        "rootDir": "../",
        "baseUrl": "./",
        "paths": {
            "@core/*": ["../core/*"],
            "@locale/*": ["../locale/*"],
        },
    },
    "include": [
        "**/*",
        "../locale/*.json"
    ],
    "references": [
        { "path": "../core" }
    ]
}
